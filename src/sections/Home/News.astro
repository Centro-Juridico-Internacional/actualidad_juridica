<section
	id="newsSectionContainer"
	class="mt-8 flex h-fit w-full flex-col items-center justify-center gap-3 text-gray-50 md:flex-row md:px-2 xl:px-0"
>
	<div
		id="mainNews"
		class="flex h-[18rem] w-[95%] items-end bg-cover bg-center bg-no-repeat md:h-[26rem] md:w-[60%]"
		style={`background-image: url(${DATA[0].bgImg})`}
	>
		<div class="flex size-full flex-col justify-end bg-gradient-to-t from-black to-black/40">
