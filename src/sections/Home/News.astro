				<h3 id="categoryMainNews">{DATA[0].category}</h3>
				<h1 id="titleMainNews" class="font-bold">{DATA[0].title}</h1>
				<h4 id="descriptionMainNews" class="text-sm">{DATA[0].description}</h4>
				<div id="infoMainNews" class="flex w-full items-center justify-start gap-x-3 text-sm">
					<img
						src={DATA[0].imgPerson}
						alt=`${DATA[0].namePerson} Foto`
						id="picturePersonMainNews"
						class="max-h-6 rounded-full"
					/>
					<strong id="NamePersonMainNews">{DATA[0].namePerson}</strong>
					<h4 id="DateMainNews">{DATA[0].date}</h4>
				</div>
			</div>
